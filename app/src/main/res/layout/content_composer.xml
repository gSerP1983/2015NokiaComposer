<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <variable name="vm" type="com.serp1983.nokiacomposer.domain.ComposerVM" />
    </data>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ComposerActivity"
        tools:showIn="@layout/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                    android:background="@drawable/button_tempo"
                    android:text='@{@string/ringtone_tempo_label + "=" + vm.tempo}'
                    android:onClick="@{(theView) -> vm.onTempoClick(theView)}"
                    />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                    card_view:cardCornerRadius="@dimen/card_corner_radius"
                    >
                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stackFromBottom="true"
                        android:transcriptMode="alwaysScroll"
                        >
                        <com.google.android.flexbox.FlexboxLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:flexWrap="wrap"
                            app:alignItems="stretch"
                            app:alignContent="stretch"
                            android:id="@+id/flexBox"
                            >
                        </com.google.android.flexbox.FlexboxLayout>
                    </ScrollView>
                </android.support.v7.widget.CardView>

                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    >
                    <Button android:text="1"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />
                    <Button android:text="2"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="3"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="4"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="5"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="6"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="7"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="8"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        />

                    <Button android:text="9"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        />

                    <Button android:text="*"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        />

                    <Button android:text="0"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        android:onLongClick="@{(theView) -> vm.onLongClick(theView)}"
                        />

                    <Button android:text="#"
                        android:textSize="20sp"
                        android:onClick="@{(theView) -> vm.onClick(theView)}"
                        />

                    <Button
                        android:layout_gravity="fill"
                        android:layout_columnSpan="2"
                        android:text="Delete"
                        android:onClick="@{() -> vm.onDeleteClick()}"
                        />

                </GridLayout>

            </LinearLayout>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_marginBottom="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                app:srcCompat='@{vm.playing ? @android:drawable/ic_lock_silent_mode : @android:drawable/ic_lock_silent_mode_off}'
                android:onClick="@{() -> vm.play()}"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            >
            <android.support.v7.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="@string/app_name"
                android:textAppearance="?android:attr/textAppearanceLarge"
                />
            <com.google.android.gms.ads.AdView android:id="@+id/adView"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="bottom|center"
                ads:adUnitId="@string/ads_banner"
                ads:adSize="SMART_BANNER"/>
        </FrameLayout>

    </LinearLayout>
</layout>
